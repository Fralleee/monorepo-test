{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/node_modules",
      "!**/coverage",
      "!**/generated",
      "!**/.claude",
      "!**/.next",
      "!**/.turbo",
      "!**/test-results",
      "!**/*.code-workspace",
      "!**/public/firebase*.js",
      "!**/mockServiceWorker.js",
      "!.vscode/settings.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useNodejsImportProtocol": "off",
        "noDescendingSpecificity": "off"
      },
      "correctness": {
        "noUnknownMediaFeatureName": "off",
        "useExhaustiveDependencies": "off",
        "useUniqueElementIds": "off"
      },
      "suspicious": {
        "noEmptyBlock": "off",
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "noUnknownAtRules": "off",
        "noConsole": "error",
        "useAwait": "error"
      },
      "complexity": {
        "useLiteralKeys": "off",
        "noImportantStyles": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      }
    }
  },
  "assist": {
    "enabled": true,
    "actions": { "source": { "organizeImports": "on" } }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "css": {
    "formatter": {
      "quoteStyle": "single"
    },
    "parser": {
      "cssModules": true
    }
  }
}
